extends layout

block layout-content
  div.container
    div#route-list.list-group.p-5
      h2.text-center Appliances
      if appliances.length
        each a in appliances
          a.list-group-item.shadow.rounded.mb-4(href=`/${campaign}/${a.id}`)= a.name
      else 
        p.text-center There are no appliances available for this campaign.