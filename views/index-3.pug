extends layout

block layout-content
  div.container
    div#route-list.list-group.p-5
      h2.text-center Routes
      if routes.length
        each route in routes
          a.list-group-item.shadow.rounded.mb-4(href=`/${appliance}/${campaign}/${route.routeID}`)= route.routeName
      else 
        p.text-center There are no routes available for this campaign.