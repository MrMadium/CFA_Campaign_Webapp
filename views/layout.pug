block variables
doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")

    title #{title} | CFSApp
    link(rel="stylesheet" href="/bootstrap.min.css")
    link(rel="stylesheet" href="/font-awesome/css/all.min.css")
    link(rel="stylesheet" href="/style.css")
  body
    nav.navbar.navbar-expand-lg.py-3.navbar-dark.bg-dark.shadow-sm
      .container
        a.navbar-brand(href='#')
          img.d-inline-block.align-middle.mr-2(src='/cfa_logo.png' width='45' alt='cfa_logo')
          span.text-uppercase.font-weight-bold.mx-3 Basin Santa Run
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            if !user
              li.nav-item.active
                  a.nav-link(href='/login') Login

            else if user.role === 'Supervisor' || user.role === 'Admin'
              li.nav-item.active
                  a.nav-link(href='/') Home
              li.nav-item
                a.nav-link(href='/accounts') Accounts
              li.nav-item
                a.nav-link(href='/brigades') Brigade
              li.nav-item
                a.nav-link(href='/campaigns') Campaigns
              li.nav-item
                a.nav-link(href='/routes') Routes
              li.nav-item
                a.nav-link(href='/logout') Logout
            
            else
              li.nav-item.active
                  a.nav-link(href='/') Home
              li.nav-item.active
                  a.nav-link(href='/logout') Logout

    div#root
      block layout-content

    script(src="/jquery.min.js")
    script(src="/bootstrap.min.js")
    script(src="/app.js")

    block scripts